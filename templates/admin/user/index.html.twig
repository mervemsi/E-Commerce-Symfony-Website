{% extends 'adminbase.html.twig' %}
{% block title %} Üyeler {% endblock %}
{% block content %}
<!-- Content =====================================================================-->
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"></a> </div>
    <h1>ADMIN PANEL</h1>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-title"> <span class="icon"> <i class="icon-home"></i> </span>
            <h5>Üye Listesi</h5>
            <div align="right" style="padding-top:5px; padding:5px;">      
                 <a href="{{ path('user_new') }}" class="btn btn-warning">Üye Ekleme</a>
            </div>
          </div>

          <div class="widget-content ">
            <table class="table table-bordered table-striped with-check">
              <thead>
                <tr>
                  <th>Id</th>
                  <th>Name Surname</th>
                  <th>Email</th>
                  <th>Status</th>
                  <th>Roles</th>
                  <th>Edit</th>
                  <th>Delete</th>
                </tr>
              </thead>
              <tbody>
              {% for user in users %}
                <tr>
                  <td> {{ user.id }} </td>
                  <td> {{ user.name }} </td>
                  <td> {{ user.email }} </td>
                  <td> {{ user.status }} </td>
                  <td> {% for item in user.roles %}
                       {{ item }}
                       {% endfor %} 
                  </td>
                  <td><a href="{{ path('user_edit', {'id':user.id}) }}" class="btn btn-info">Edit User</a></td>
                  <td> <a class="btn btn-danger">{{ include('user/_delete_form.html.twig') }}</a></td>
                </tr>
                {% else %}
                <tr>
                  <td>Kayıt Bulunamadı</td>
                </tr>
                {% endfor %}
              </tbody>
            </table>
        </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end Content part -->

{% endblock %}

