{% extends 'adminbase.html.twig' %}
{% block title %} Order List {% endblock %}
{% block content %}
<!-- Content =====================================================================-->
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"></a> </div>
    <h1>ADMIN PANEL</h1>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-title">
            <h5>Order List</h5>
          </div>

        <div class="widget-content ">
        {{ include ('/messages.html.twig') }}
        <table class="table table-bordered table-striped with-check">
        <thead>
            <tr>
                <th>Id</th>
                <th>User Id</th>
                <th>Name</th>
                <th>Amount</th>
                <th>Address</th>
                <th>City</th>
                <th>Phone</th>
                <th>Shipinfo</th>
                <th>Note</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.userid }}</td>
                <td>{{ order.name }}</td>
                <td>{{ order.amount }}â‚º</td>
                <td>{{ order.address }}</td>
                <td>{{ order.city }}</td>
                <td>{{ order.phone }}</td>
                <td>{{ order.shipinfo }}</td>
                <td>{{ order.note }}</td>
                <td>{{ order.status }}</td>
                <td>
                    <a href="javascript:openWin('{{ path('admin_orders_show', {'id': order.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200,menuBar=no,scrollBars=no,resizable=no,width=900, height=700');" class="btn btn-primary">Show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Orders is Empty.</td>
            </tr><hr>

        {% endfor %}
        </tbody>
     </table>
            </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end Content part -->

{% endblock %}
