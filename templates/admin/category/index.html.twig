{% extends 'adminbase.html.twig' %}
{% block title %} Categories {% endblock %}
{% block content %}
<!-- Content =====================================================================-->
<div id="content">
  <div id="content-header">
    <div id="breadcrumb"> <a href="#" title="Go to Home" class="tip-bottom"></a> </div>
    <h1>ADMIN PANEL</h1>
  </div>
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="span12">
        <div class="widget-box">
          <div class="widget-title"> <span class="icon"> <i class="icon-home"></i> </span>
            <h5>Category List</h5>
            <div align="right" style="padding-top:5px; padding:5px;">      
                 <a href="{{ path('admin_category_new') }}" class="btn btn-warning">Category Add</a>
            </div>
          </div>

          <div class="widget-content ">
            <table class="table table-bordered table-striped with-check">
            <thead>
            <tr>
                <th><div class="checker" id="uniform-title-table-checkbox"><span><input type="checkbox" id="title-table-checkbox" name="title-table-checkbox" style="opacity: 0;"></span></div></th>
                <th>Id</th>
                <th>Parentid</th>
                <th>Title</th>
                <th>Keywords</th>
                <th>Description</th>
                <th>Status</th>
                <th>Show</th>
                <th>Edit</th>
                <th>Delete</td>
            </tr>
            </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td><div class="checker" id="uniform-undefined"><span><input type="checkbox" style="opacity: 0;"></span></div></td>
                <td>{{ category.id }}</td>
                <td>{{ category.parentid }}</td>
                <td>{{ category.title }}</td>
                <td>{{ category.keywords }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.status }}</td>
                <td><a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-primary">Show </a></td>
                <td><a href="{{ path('admin_category_edit', {'id': category.id, 'pid': category.parentid}) }}" class="btn btn-info">Edit </a></td>
                <td>{{ include('admin/category/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- end Content part -->

{% endblock %}
